########################################
# Environment
########################################
NODE_ENV=development
PORT=3000

########################################
# Application Info
########################################
APP_NAME="Portfolio Management System"
APP_VERSION="1.0.0"
APP_DESCRIPTION="API for managing investment portfolios"
APP_SERVER_URL="http://localhost:3000"

########################################
# Developer / Maintainer
########################################
APP_DEVELOPER_NAME="Your Name"
APP_DEVELOPER_EMAIL="your.email@example.com"

########################################
# Database (PostgreSQL)
# Format:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE
########################################
DATABASE_URL="postgresql://postgres:password@localhost:5432/portfolio_db"

########################################
# Authentication (JWT)
# Use strong random strings in production
########################################
JWT_SECRET="your_jwt_secret_key"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key"

# Token expiration (in seconds)
JWT_EXPIRATION=3600            # 1 hour
JWT_REFRESH_EXPIRATION=604800  # 7 days

########################################
# Logging
########################################
LOG_LEVEL=debug
LOG_DIR=./logs

########################################
# CORS
########################################
CORS_ORIGIN="http://localhost:3001"

########################################
# Prisma
########################################
PRISMA_CLIENT_ENGINE_TYPE=library
